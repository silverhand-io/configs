{
  "extends": "./stylelint-config-xo-scss",
  "rules": {
    "indentation": [2, { "baseIndentLevel": 1 }],
    "selector-class-pattern": "^((?!-).)*$",
    "selector-id-pattern": "^((?!-).)*$",
    "color-function-notation": "legacy",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "scss/function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "/^_./"
        ]
      }
    ]
  }
}
